<% if user_signed_in? && !@rides.empty? %>
  <table class="rides">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Tempo</th>
        <th>Distance</th>
      </tr>
    </thead>
    <tbody>
      <% @rides.limit(20).each do |ride| %> 
        <tr>
          <td><%= link_to "#{ ride.title }", ride_path(ride.id) %></td>
          <td><%= ride.date %></td>
          <td><%= ride.location %></td>
          <td><%= ride.tempo %></td>
          <td><%= ride.distance %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
<% end %>
